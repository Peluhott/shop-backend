{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["**/*.ts"],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "tests",
      "__tests__"
    ]
  }
