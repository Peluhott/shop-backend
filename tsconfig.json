{
    "compilerOptions": {
      "target": "ES2020",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"],
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["**/*.ts"]  // 
  }
  